@using BlazorStrap

<BSNavbar Color="BSColor.Light">
    <BSContainer Container="Container.Fluid">
        <BSNavbarBrand Url="/">
            <img src="/images/main-logo.png" width="150" />
        </BSNavbarBrand>
        <BSCollapse IsInNavbar="true">
            <Toggler>
                <BSNavbarToggle />
            </Toggler>
            <Content>
                <BSNav MarginEnd="Margins.Auto" MarginBottom="Margins.Small" Class="mb-lg-0">
                    <BSNavItem Url="/">Hem</BSNavItem>
                    <BSNavItem Url="/Organisation">Organisation</BSNavItem>
                    <BSNavItem Url="/Contact">Kontakt</BSNavItem>
                    <BSNavItem Url="/blog">Blog</BSNavItem>
                </BSNav>
            </Content>
        </BSCollapse>
    </BSContainer>
</BSNavbar>

<style>
    .navbar {
        font-family: "proxima-nova", "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
        line-height: 1em;
    }

    .navbar-light .navbar-nav .nav-link.active {
        color: #00ffe6;
    }

    .navbar-light .navbar-nav .nav-link.hover {
        color: #00ffe6;
    }
</style>